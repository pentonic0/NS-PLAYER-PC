{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "media-stream-player",
  "version": "1.0.1",
  "identifier": "com.mirazmac.player",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection,CrossSiteDocumentBlockingAlways,CrossSiteDocumentBlockingIfIsolating",
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "shadow": true,
        "center": true,
        "visible": false,
        "title": "Media Stream Player",
        "width": 800,
        "height": 580
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
